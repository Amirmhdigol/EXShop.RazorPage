@page "{handler?}"
@using EXShop.RazorPage.Infrastructure
@model EXShop.RazorPage.Pages.Admin.Slider.IndexModel
@{
}

<h3>مدیریت اسلایدر ها</h3>
<a asp-page="Add" class="btn btn-success mb-2">افزودن اسلایدر</a>
<div class="table-responsive card card-body p-0">
    <table class="table table-bordered mb-0">
        <thead>
            <tr>
                <th>عکس</th>
                <th>عنوان</th>
                <th>لینک</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Sliders)
            {
                <tr>
                    <td>
                        <img src="@Directories.GetSliderImage(item.ImageName)" id="indexSlider" style="max-width: 250px" />
                    </td>
                    <td>@item.Title</td>
                    <td>@item.Link</td>
                    <td>
                        <a asp-page="Edit" class="btn btn-primary btn-sm mb-1" asp-route-id="@item.Id">ویرایش</a>
                        <delete-item url="@Url.Page("Index","DeleteSlider",new{sliderId=item.Id})"> حذف </delete-item>
                    </td>
                </tr>
            }
            @if (!Model.Sliders.Any())
            {
                <tr>
                    <td colspan="4">موردی برای نمایش وجود ندارد</td>
                </tr>
            }
        </tbody>
    </table>
</div>