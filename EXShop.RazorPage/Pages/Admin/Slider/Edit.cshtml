@page "{id}"
@using EXShop.RazorPage.Infrastructure
@model EXShop.RazorPage.Pages.Admin.Slider.EditModel
@{
    ViewData["Title"] = "ویرایش اسلایدر";
    ViewData["selected"] = "sliders";
}

<form method="post" class="card" enctype="multipart/form-data">
    <div class="row card-body">
        @Html.HiddenFor(a=>a.ImageName)
        <div class="col-md-6">
            @Html.EditorFor(a=>a.Title)
        </div>
        <div class="col-md-6">
            @Html.EditorFor(a=>a.Url)
        </div>
        <div class="col-md-6">
            @Html.EditorFor(a=>a.ImageFile)
        </div>
        <div class="col-md-6">
            <img src="@Directories.GetSliderImage(Model.ImageName)" style="width: 100%;height:300px" />
        </div>
    </div>
    <div class="card-footer text-left">
        <button class="btn btn-success" type="submit">ثبت اطلاعات</button>
    </div>
</form>