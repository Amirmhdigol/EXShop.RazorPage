@page
@using EXShop.RazorPage.Services.Roles
@model EXShop.RazorPage.Pages.Admin.User.AddModel
@inject IRoleService _roleService;
@{
    ViewData["Title"] = "افزودن کاربر";
    ViewData["selected"] = "users";
    var roles = await _roleService.GetRoles();
}
<form method="post" class="card" enctype="multipart/form-data">
    <div class="row card-body">
        <div class="col-md-3">
            @Html.EditorFor(a=>a.Name)
        </div>
        <div class="col-md-3">
            @Html.EditorFor(a=>a.Family)
        </div>
        <div class="col-md-6">
            @Html.EditorFor(a=>a.Email)
        </div>
        <div class="col-md-6">
            @Html.EditorFor(a=>a.Password)
        </div>
        <div class="col-md-6">
            @Html.EditorFor(a=>a.PhoneNumber)
        </div>
        <div class="col-md-4">
            <label asp-for="RoleId"></label>
            <select asp-for="RoleId" class="form-control select2">
                @foreach (var item in roles)
                {
                    <option value="@item.Id">@item.Title</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            @Html.EditorFor(a=>a.Gender)
        </div>
    </div>
    <div class="card-footer text-left">
        <button class="btn btn-success" type="submit">ثبت اطلاعات</button>
    </div>
</form>
