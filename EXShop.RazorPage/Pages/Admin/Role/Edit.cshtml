@page "{id}"
@using EXShop.RazorPage.Models.Roles
@model EXShop.RazorPage.Pages.Admin.Role.EditModel
@{
    ViewData["Title"] = "ویرایش نقش";
}
<h3>@ViewData["Title"]</h3>

<form class="card" method="post">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                @Html.EditorFor(a=>a.Title)
            </div>
            <div class="col-md-6">
                <label>انتخاب دسترسی ها</label><br />
                <div class="row">
                    @foreach (var item in Enum.GetNames(typeof(Permission)))
                    {
                        <div class="col-md-4">
                            @{var id = Guid.NewGuid();}
                            <div class="custom-control custom-switch custom-switch-success mr-2 mb-1">
                                <label class="mb-0 d-block">@item.Replace("_"," ")</label>
                                <input type="checkbox" value="@item" checked="@(Model.Permissioms.Any(a=>a.ToString()==item))" class="custom-control-input" name="permissions" id="@id">
                                <label class="custom-control-label" for="@id">
                                    <span class="switch-icon-left"><i class="bx bx-check"></i></span>
                                    <span class="switch-icon-right"><i class="bx bx-check"></i></span>
                                </label>
                            </div>
                        </div>
                    }
                </div>
            </div>  
        </div>
    </div>
    <div class="card-footer text-left">
        <cancel></cancel>
        <submit />
    </div>
</form>