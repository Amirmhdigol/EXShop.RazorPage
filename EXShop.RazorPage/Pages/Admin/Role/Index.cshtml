@page "{handler?}"
@using EXShop.RazorPage.Models.Roles
@model EXShop.RazorPage.Pages.Admin.Role.IndexModel
@{
    ViewData["Title"] = "مدیریت نقش ها";
    ViewData["selected"] = "roles";
}
<h3>@ViewData["Title"]</h3>
<a asp-page="Add" class="btn btn-success mb-2">افزودن نقش</a>
<div class="table-responsive card card-body p-0">
    <table class="table table-bordered mb-0">
        <thead>
            <tr>
                <th>آیدی</th>
                <th>عنوان</th>
                <th>اجازه ها</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Roles)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>
                        @foreach (var item2 in Enum.GetNames(typeof(Permission)))
                        {
                            item2.ToList();
                        }
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.Id">ویرایش</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>