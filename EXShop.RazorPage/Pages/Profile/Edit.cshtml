@page
@model EXShop.RazorPage.Pages.Profile.EditModel
@{
    ViewData["Title"] = "ویرایش پروفایل";
}
<div class="row mb-5">
    <partial name="Shared/Profile/_ProfileSideBar" />
    <div class="col-lg-9 col-md-8">
        <div class="row mb-4">
            <div class="col-12">
                <div class="section-title mb-2">
                    @ViewData["Title"]
                </div>
                <section class="shadow-around p-3">
                    <form method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-lg-12 mb-5">
                                @Html.EditorFor(p=>p.Name)
                            </div>
                            <div class="col-lg-6 mb-5">
                                @Html.EditorFor(p=>p.Family)
                            </div>
                            <div class="col-lg-6 mb-5">
                                @Html.EditorFor(p=>p.PhoneNumber)
                            </div>
                            <div class="col-lg-12 mb-5">
                                @Html.EditorFor(p=>p.Email)
                            </div>
                            <div class="col-lg-6 mb-5">
                                @Html.EditorFor(p=>p.Gender)
                            </div>
                            <div class="col-lg-6 mb-5">
                                @Html.EditorFor(p=>p.Avatar)
                            </div>
                            <div class="col-12">
                                <div class="form-element-row text-left">
                                    <button type="submit" class="btn-element btn-success-element">
                                        <i class="fad fa-user-edit"></i>
                                        ذخیره تغییرات
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>
